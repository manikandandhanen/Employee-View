extends layout

block content
    h1 Employees
    form(method="post", action="/employees")
        .form-group
            label(for="name") Name
            input.form-control(type="text", id="name", name="name", required)
        .form-group
            label(for="status") Status
            select.form-control(id="status", name="status", required)
                option(value="active") Active
                option(value="inactive") Inactive
        button.btn.btn-primary(type="submit") Add Employee
    table.table
        thead
            tr
                th ID
                th Name
                th Status
        tbody
            each employee in employees
                tr
                    td= employee.id
                    td= employee.name
                    td= employee.status
